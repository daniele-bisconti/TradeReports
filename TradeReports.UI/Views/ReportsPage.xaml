<Page
    x:Class="TradeReports.UI.Views.ReportsPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:TradeReports.UI.Properties"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    xmlns:Controls="clr-namespace:TradeReports.UI.Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.ReportsPageTitle}" />
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <TabControl Style="{DynamicResource MahApps.Styles.TabControl.Animated}">
                <TabItem Header="{x:Static properties:Resources.ShortLongReportTitle}">
                    <Controls:ShortLongReport DataContext="{Binding ShortLongReportViewModel}"></Controls:ShortLongReport>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>
